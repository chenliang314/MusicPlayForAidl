<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <include
        android:id="@+id/common_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_title_height"
        android:layout_alignParentTop="true"
        layout="@layout/common_title" />

    <include
        android:id="@+id/play_controller_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_controller_height"
        android:layout_alignParentBottom="true"
        layout="@layout/play_controller" />

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/play_controller_layout"
        android:layout_below="@id/common_title_layout" >
    </RelativeLayout>

</RelativeLayout>