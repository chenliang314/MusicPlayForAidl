<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_title_height"
    android:layout_alignParentTop="true"
    android:background="@color/player_title_color" >

    <Button
        android:id="@+id/back"
        android:layout_width="@dimen/player_title_logo"
        android:layout_height="@dimen/player_title_logo"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/player_title_margin"
        android:background="@drawable/btn_back_selector" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/main_tab_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16dp" />

    <Button
        android:id="@+id/setting"
        android:layout_width="@dimen/player_title_setting"
        android:layout_height="@dimen/player_title_setting"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/player_title_margin"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_more" />

</RelativeLayout>