<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/loading_wheel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loading_height"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/loading_text_margin"
            android:gravity="center_vertical"
            android:text="@string/loading" />
    </LinearLayout>

    <ListView
        android:id="@+id/music_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/play_controller_layout"
        android:layout_below="@id/player_title_layout"
        android:background="@android:color/white"
        android:visibility="gone" />

</merge>